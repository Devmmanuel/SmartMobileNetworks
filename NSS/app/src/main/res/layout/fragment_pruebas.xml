<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNnsAuxiliar"
    tools:context=".ui.pruebas.pruebas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.github.anastr.speedviewlib.SpeedView
                android:id="@+id/speedView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp" />

            <com.github.anastr.speedviewlib.DeluxeSpeedView
                android:id="@+id/speedDeluxe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp" />

            <Button
                android:id="@+id/btnIniciarPrueba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnIniciarPrueb" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>